{
  "tests": [
    {
      "name": "Handle OPTIONS request for CORS",
      "method": "OPTIONS",
      "path": "/",
      "expectedStatus": 200,
      "expectedHeaders": {
        "Access-Control-Allow-Origin": "*"
      }
    },
    {
      "name": "Reject request without required fields",
      "method": "POST",
      "path": "/",
      "body": {
        "name": "",
        "phone": ""
      },
      "expectedStatus": 400,
      "expectedBody": {
        "error": "string"
      },
      "bodyMatcher": "partial"
    },
    {
      "name": "Successfully save contact request",
      "method": "POST",
      "path": "/",
      "body": {
        "name": "Иван Петров",
        "phone": "+7 900 123-45-67",
        "message": "Хочу узнать подробнее"
      },
      "expectedStatus": 200,
      "expectedBody": {
        "success": true
      },
      "bodyMatcher": "partial"
    }
  ]
}